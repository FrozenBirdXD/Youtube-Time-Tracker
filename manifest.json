{
    "manifest_version": 3,
    "name": "YouTube Time Tracker",
    "version": "1.1",
    "description": "Track the time you spend on YouTube",
    "icons": {
        "128": "assets/icons/icon.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "pages/html/popup.html",
        "default_title": "YouTube Time Tracker"
    },
    "background": {
        "service_worker": "background.js"
    }
}